{
  "appId": "com.example.config-hub",
  "productName": "Config Hub",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    "loading.html"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "artifactName": "${productName}_${version}.${ext}"
  }
}